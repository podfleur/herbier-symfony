{% extends 'base.html.twig' %}

{% block title %}Liste des lieux{% endblock %}


{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font-family: calibri; }
    .example-wrapper code { padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des lieux</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Modification</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieux %}
            <tr>
                <td>{{ lieu.nom }}</td>
                <td><a class="btn btn-outline-info" href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a></td>
                <td>{{ include('lieu/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_lieu_new') }}">Nouveau</a>
    <a class="btn btn-outline-dark" href="{{ path('app_home') }}">Retour</a>
</div>
{% endblock %}
